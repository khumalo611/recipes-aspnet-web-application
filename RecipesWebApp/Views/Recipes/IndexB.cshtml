@model IEnumerable<Recipe>

@{
	ViewData["Title"] = "List of Recipes";
}

<div class="row">
	<div class="col-md-8 offset-md-2">
		<table class="table">
			<thead>
				<tr class="text-center">
					<th>@Html.DisplayNameFor(model => model.ImageURL)</th>
					<th>@Html.DisplayNameFor(model => model.Name)</th>
					<th>@Html.DisplayNameFor(model => model.DateAdded)</th>
					<th>@Html.DisplayNameFor(model => model.Author)</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							<img class="rounded-circle" src="/@item.ImageURL" alt="@item.Name" style="width: 150px; height: 150px; object-fit: cover; object-position: center;">
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.DateAdded)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Author)
						</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a>
							<a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a>
							<a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

<div style="position: fixed; right: 25px; bottom: 60px;" class="text-white">
	<a asp-controller="Recipes" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add New </a>
</div>